        font-size 14px
        line-height 1.2em
        display inline-block
        cursor pointer
        margin 0 8px
    &__home
        width 15px
        height 13px
        background-image url(../images/breadcrumbs__home.png)
        background-size contain
        background-repeat no-repeat
        display inline-block
        margin -1px 10px 0 0
    &__separator
        position relative
        width 6px
        height 5px
        display inline-block
        &:after
        &:before
            content ""
            position absolute
            width 7px
            height 1px
            background #68686a
