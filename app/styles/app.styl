        &:hover 
            color #2b519e
        // &_arrow
        //     position relative
        //     padding-right 15px
        //     &:after
        //         transition all .5s ease 0s
        //         content ""
        //         position absolute
        //         width 11px
        //         height 7px
        //         background url(../images/link-arrow.svg)
        //         background-size contain
        //         background-repeat no-repeat
        //         right 0
        //         top calc(50% - 3px)
