            position relative
            padding-right 15px
            &:after
                transition all .5s ease 0s
                content ""
                position absolute
                width 11px
                height 7px
                background url(../images/link-arrow.svg)
                background-size contain
                background-repeat no-repeat
                right 0
                top calc(50% - 3px)
    &__search
        margin-top 6px
        cursor pointer
    &__submenu
        &:before
            content ''
            position fixed
            height 0
            width 0
            border 6px solid transparent
            left 50%
            right auto
            transform translateX(-50%)
            border-bottom-color inherit
            bottom calc(100% + 1px)
        &:after
            content ''
            position absolute
            height 0
            width 0
            border 6px solid transparent
            left 50%
            right auto
            transform translateX(-50%)
            border-bottom-color #fff
            bottom 100%
            z-index 10
        z-index 100
        visibility hidden
        opacity 0
        transition .2s ease-out
        position absolute
        transform translateX(-50%)
