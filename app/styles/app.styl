        fill #1c1c1c
    &__search-btn
        margin-top 6px
        cursor pointer
        transition all 100ms 0ms
        &:hover
            .top-menu__search-svg
                fill #2b519e
    
    &__search
        position absolute
        opacity 0
        width 400px
        visibility hidden
        opacity 0
        transition transform 300ms 0ms, opacity 300ms 0ms, visibility 0ms 300ms
        top 50%
        transform translateY(50%)
        &_visible
            transform translateY(-50%)
            opacity 1
            visibility visible
            transition transform 300ms 0ms, opacity 300ms 0ms, visibility 0ms 0ms
    &__close
        z-index 10
        cursor pointer
        position absolute
        right 5px
        top 50%
        transform translateY(-50%)
        opacity .6
        display block
        border-radius 50%
        // box-shadow 0px 4px 10px 0px rgba(73, 73, 73, 0.4)
        width 30px
        height 30px
        //background #4274d6
        &:hover
            &:before
            &:after
                transition transform 600ms 0ms
            &:before
                transform rotate(135deg)
            &:after
                transform rotate(-135deg)
        &:before
        &:after
            transition transform 0ms 0ms
            content ''
            position absolute
            width 14px
            height 2px
            background #4d4d4d
            left calc(50% - 7px) 
            top calc(50% - 1px)
        &:before
            transform rotate(-45deg)
            //bottom -2px
        &:after
            transform rotate(45deg)
    
    &__items
        position relative
        top -20px
        visibility hidden
        opacity 0
        transition top 300ms 0ms, opacity 300ms 0ms, visibility 0ms 300ms
        &_visible
            top 0px
            opacity 1
            visibility visible
            transition top 300ms 0ms, opacity 300ms 0ms, visibility 0ms 0ms
    &__submenu
        &:before
            content ''
            position fixed
            height 0
            width 0
            border 6px solid transparent
            left 50%
            right auto
            transform translateX(-50%)
            border-bottom-color inherit
            bottom calc(100% + 1px)
        &:after
