.arrow
    position relative
    width 12px
    height 12px
    &:before
    &:after
        transition all .5s ease 0s
        content ''
        position absolute
        width 8px
        height 1px
        background #2b519e
    &_top
        &:before
            transform rotate(-45deg)
            right 4px
            top 6px
        &:after
            transform rotate(45deg)
            left 5px
            top 6px
    &_right
        &:before
            transform rotate(45deg)
            top 3px
            left 2px
        &:after
            transform rotate(-45deg)
            top 8px
            left 2px
    &_left
        &:before
            transform rotate(-45deg)
            top 3px
            left 2px
        &:after
            transform rotate(45deg)
            top 8px
            left 2px
    &_bottom
        &:before
            transform rotate(45deg)
            right 4px
            top 6px
        &:after
            transform rotate(-45deg)
            left 5px
            top 6px