.btn
    padding 1em 1.2em
    border-radius 4px
    position relative
    user-select none
    overflow hidden
    cursor pointer
    display inline-block
    &__text
        font-size 16px
        line-height 1.2em
        position relative
        z-index 10
        font-weight 600
        transition-delay 2ms
        text-align center
    &:after
        content ""
        position absolute
        height 0%
        left 50%
        top 50%
        width 0
        border-radius 50%
        opacity 0
        transition all .8s ease 0s
        transform translateX(-50%) translateY(-50%)
        z-index 5
    &:hover
        &:after
            height 450%
            width 110%
            opacity 1    
        .btn__text
            color #fff
    &_view
        &_action
            border 2px solid #a61713
            .btn__text
                color #a61713
            &:after
                background #a61713
            &:hover
                .btn__text
                    color #fff            
        &_pseudo
            border 2px solid #4273d6
            .btn__text
                color #4273d6
            &:after
                background #4273d6
            &:hover
                .btn__text
                    color #fff
        &_light
            background rgba(0, 0, 0, 0.2)
            border 2px solid #fff
            .btn__text
                color #fff
            &:after
                background #fff
            &:hover
                .btn__text
                    color #000
