.hamburger
    @media (min-width 1160px)
        display none
        align-items center
        justify-content space-between
    width 24px
    height 16px
    position relative
    &__plank
        position absolute
        width 100%
        height 2px
        background #2b519e
        transition all 0.3s cubic-bezier(0.4, 0, 1, 1) 0s
        opacity 1
        &:nth-child(1)
            top 0px
        &:nth-child(2)
            transition all .2s ease 0s
            top 7px
        &:nth-child(3)
            top 14px
    &_open
        .hamburger__plank
            &:nth-child(1)
                top 7px
                transform rotate(-45deg)
            &:nth-child(2)
                opacity 0
            &:nth-child(3)
                top 7px
                transform rotate(45deg)
