.top-menu
    width 100%
    height 100%
    display none
    //justify-content center
    display flex
    align-items center
    justify-content center
    position relative
    &__wrapper
        position absolute
        width 100%
        height 100%
        overflow hidden
        &:before
        &:after
            content ''
            position absolute
            //background #fff
            height 80px
            width 300px
            top 0
            transform rotate(-65deg)
        &:before
            right calc(100% - 140px)
        &:after
            left calc(100% - 130px)

    &__item
        display inline-block
        margin 0 10px
        position relative
        padding 20px 0
        &:hover
            .top-menu__submenu
                visibility visible
                opacity 1
    &__link
        font-size 15px
        line-height 1.4em
        cursor pointer
        // padding 0 20px
        color #1c1c1c
        font-weight 600
