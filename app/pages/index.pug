    .page__main                               
        .main
            +b.banner(style="background-image:url(images/baner1.jpg);")
                +e.box
                    +e.text
                        .offer__title Водоснабжение и канализация для частных домов
                        .offer__description Работаем в Ростов-на-дону и Ростовской области
            +b.banner(style="background-image:url(images/baner1.jpg);")
                +e.box
                    +e.text
